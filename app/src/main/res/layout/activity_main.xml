<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F0F8FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"
        android:textSize="40dp"
        android:layout_marginBottom="100dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txtFromSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="From second..."
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textColor="#000"
        android:textColorHint="@color/black"

        />

    <TextView
        android:id="@+id/txtFromThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="From third..."
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"

        />

    <Button
        android:id="@+id/btnToSecond"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Second page"
        android:layout_margin="5dp"
        android:backgroundTint="#0000FF"
        android:textColor="@color/white"

        />

    <EditText
        android:id="@+id/txtSendToSecond"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Send text to second"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />

    <Button
        android:id="@+id/btnToThird"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Third Page"
        android:layout_margin="5dp"
        android:backgroundTint="#B22222"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/txtSendToThird"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Send text to third"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />

</LinearLayout>